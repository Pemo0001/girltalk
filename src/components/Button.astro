---
import "../global.css";
const { variant } = Astro.props;
---

<button class={variant}><slot /></button>

<style>
  button {
    border-radius: 30px;
    padding: 0.7rem 2.2rem;
    border: none;
    font-family: "Obviously", sans-serif;
    font-weight: bold;
    font-size: 1.5rem;
    cursor: pointer;
  }

  .primary {
    background-color: var(--accent2);
    color: var(--accent1);
  }

  .secondary {
    background-color: var(--accent2);
    color: var(--secondary);
  }
</style>
