---
import "../global.css";
import Button from "./Button.astro";
---

<div class="guide_card">
  <img class="hug" src="../../public/hug.svg" alt="hug" />
  <h3>GUIDE</h3>
  <p>Hvordan snakker du med dit barn omkring selvskade?</p>
  <div class="button">
    <Button id="guide_card_button" variant="primary">Download</Button>
  </div>
</div>

<style>
  .guide_card {
    background-color: var(--accent1);
    color: #fff;
    padding: 2rem 2rem;
    border-radius: 20px;
    position: relative;
    margin: 2rem 1rem;
    min-width: 325px;
    max-width: 450px;
    max-height: 550px;
  }

  .hug {
    margin: 0 auto;
  }
  h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    max-width: 92%;
    color: #fff;
  }

  p {
    max-width: 80%;
    line-height: 1.5rem;
    margin-bottom: 2rem;
    background-color: var(--accent1);
    color: #fff;
  }

  .button {
    text-align: center;
  }
</style>
